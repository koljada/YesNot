<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Користувачі</div>
  <!-- Table -->
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Ім’я</th>
      <th>Пошта</th>
      <th>Рейтинг</th>
      <th>Адмін</th>
      <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    <% @user.each_with_index  do |u, index|   %>
    <tr>
      <th scope="row"><%=index+1%></th>
      <td><%= u.username%></td>
      <td><%= u.email%></td>
      <td><%= u.rate %></td>
      <td> <%= check_box_tag u.email, u.username, checked=(true if u.admin), disabled: true %></td>
      <td><%= link_to 'Редагувати',edit_user_path(u) %><p> </p>
        <%= link_to 'Видалити', user_path(u), method: :delete  %></td>

    </tr>
<%end%>
    </tbody>
  </table>
</div>
<%= will_paginate @user %>
<%= link_to  topics_path do%>
    <%= icon "chevron-circle-left", "2x" %>
<%end%>

