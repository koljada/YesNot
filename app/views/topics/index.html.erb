<div class="page-header" xmlns="http://www.w3.org/1999/html">
  <span class="headerspan"><h1> Питання</h1>
      <% if current_user%>
          <%= link_to  new_topic_path  do %>
              <%=icon "plus-circle", "2x"  %>
          <%end%>
      <%end%>
  </span>
</div>

<div id="new_modal" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%=  render 'new_modal' %>
</div>

<div class="cards">
  <% @topics.each do |topic|%>

        <%= render 'list', topic:topic%>

<%end%>
  <footer>
    <%= will_paginate @topics %>
  </footer>
</div>
